#!/uns/bin/zsh -f
# macros-make-data

if [[ $# != 1 ]]; then
  echo "Usage: $0 <packages-directory>"
  exit -1
fi

TM=$PWD
PKG=$1
cd $PKG

for i in *(/); do 
  echo $i
  pushd $i
    ( cat c-files-listing || find-c ) \
     | em_analyze -i -t -d $TM:${i%%-*} > $TM/${i%%-*}.out 2> $TM/${i%%-*}.err
  popd
done
