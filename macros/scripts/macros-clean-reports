#!/uns/bin/zsh -f
# Use this script to remove the data output by em_reports, leaving only that
# generated by em_analyze.  The makefile uses this script.
setopt extendedglob
# If there are no matching files, this would err:  rm is passed no arguments.
# So make sure there is at least one file to be removed.
touch foo
(for i in *~Makefile*(.); do echo $i; done) | egrep -v "(\.state|\.dstate|\.estate|\.err|\.evil\|\.out|\.perr)" | xargs rm

